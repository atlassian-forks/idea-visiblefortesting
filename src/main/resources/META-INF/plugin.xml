<idea-plugin url="http://github.com/trubitsyn/VisibleForTesting">
    <name>VisibleForTesting</name>

    <vendor email="nikola.trubitsyn@gmail.com" url="http://www.github.com/trubitsyn">Nikola Trubitsyn</vendor>
    <idea-version since-build="145"/>

    <depends>com.intellij.modules.java</depends>

    <description><![CDATA[
      <a href="https://developer.android.com/reference/android/support/annotation/VisibleForTesting.html">@VisibleForTesting</a> annotation support for the IntelliJ platform.

      <pre>android.support.annotation.VisibleForTesting</pre> must be accessible in order for plugin to work. Intention actions won't be shown otherwise.
      Follow instructions <a href="https://developer.android.com/studio/write/annotations.html#adding-annotations">here</a> to add it as a dependency.
    ]]></description>

    <change-notes><![CDATA[
      Added note about required dependency.
    ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>io.github.trubitsyn.visiblefortesting.AnnotateClassMethodsIntention</className>
            <category>Android</category>
        </intentionAction>
        <intentionAction>
            <className>io.github.trubitsyn.visiblefortesting.AnnotateMethodIntention</className>
        </intentionAction>
        <intentionAction>
            <className>io.github.trubitsyn.visiblefortesting.AnnotateMethodFromTestIntention</className>
        </intentionAction>
    </extensions>

</idea-plugin>
